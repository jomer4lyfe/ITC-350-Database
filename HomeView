-- Home Page View

CREATE OR REPLACE VIEW HomePage AS
SELECT 'CPU' AS table_name, part_name FROM CPU
UNION ALL
SELECT 'GPU' AS table_name, part_name FROM GPU
UNION ALL 
SELECT 'Memory' AS table_name, part_name FROM Memory
UNION ALL
SELECT 'Motherboard' AS table_name, part_name FROM Motherboard
UNION ALL 
SELECT 'PowerSupply' AS table_name, part_name FROM PowerSupply
UNION ALL 
SELECT 'PreBuilt' AS table_name, part_name FROM PreBuilt
UNION ALL 
SELECT 'Storage' AS table_name, part_name FROM Storage;
